<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.candle.aroma.AccountActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:onClick="back"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mulish_bold"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/mulish_semibold"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mulish_semibold"
        android:textColor="@color/gray_text"
        android:textSize="12sp" />

    <Button
        android:id="@+id/addProduct"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/roboto_medium"
        android:onClick="addProduct"
        android:text="Add Product"
        android:textSize="24sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/roboto_medium"
        android:onClick="deleteAccount"
        android:text="DELETE ACCOUNT"
        android:textSize="22sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/roboto_medium"
        android:onClick="log_out"
        android:text="LOG OUT"
        android:textSize="24sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/myOrders"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/roboto_medium"
        android:onClick="myOrders"
        android:text="MY ORDERS"
        android:textSize="22sp"
        app:cornerRadius="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="home"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/catalog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="catalog"
            app:srcCompat="@drawable/catalog" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="likedItems"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="cart"
            app:srcCompat="@drawable/cart" />

        <ImageView
            android:id="@+id/account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="account"
            app:srcCompat="@drawable/baseline_person_40" />
    </LinearLayout>

</RelativeLayout>